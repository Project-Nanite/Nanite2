echo "ðŸ“‹ Testing slideshow QML..."
qml_file="/usr/share/calamares/branding/nanite/slideshow/slideshow.qml"
if [ -f "$qml_file" ]; then
    echo "âœ… Slideshow QML file: EXISTS"
    
    # Check QML syntax if qmlscene is available
    if command -v qmlscene >/dev/null 2>&1; then
        if qmlscene --quit "$qml_file" 2>/dev/null; then
            echo "âœ… QML syntax: Valid"
        else
            echo "âš ï¸  QML syntax: May have issues"
        fi
    else
        echo "â„¹ï¸  QML syntax checker not available"
    fi
else
    echo "âŒ Slideshow QML file: MISSING"
fi

# Test Calamares launch
echo ""
echo "ðŸ“‹ Testing Calamares launch..."
if timeout 5 calamares --test 2>/dev/null; then
    echo "âœ… Calamares: Can launch"
else
    echo "âŒ Calamares: Launch failed"
    echo "   Try running: calamares --debug"
fi

echo ""
echo "ðŸ’¡ If issues persist:"
echo "   â€¢ Check /var/log/calamares for detailed errors"
echo "   â€¢ Run 'calamares --debug' for verbose output"
echo "   â€¢ Verify all image files exist in /usr/share/pixmaps/"
EOF

