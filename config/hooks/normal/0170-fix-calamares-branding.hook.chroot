#!/bin/bash
# Test Calamares configuration

echo "ðŸ”§ Testing Calamares Configuration"
echo "=================================="

# Test branding file syntax
echo "ðŸ“‹ Testing branding.desc syntax..."
if calamares --test-branding /etc/calamares/branding/nanite/branding.desc 2>/dev/null; then
    echo "âœ… Branding configuration: OK"
else
    echo "âŒ Branding configuration: FAILED"
    echo "   Checking syntax..."
    python3 -c "
import yaml
try:
    with open('/etc/calamares/branding/nanite/branding.desc', 'r') as f:
        yaml.safe_load(f)
    print('âœ… YAML syntax: Valid')
except Exception as e:
    print(f'âŒ YAML syntax error: {e}')
"
fi

# Test slideshow QML
