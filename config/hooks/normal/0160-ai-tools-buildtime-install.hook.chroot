# ==========================================
# CREATE DESKTOP SHORTCUTS
# ==========================================

echo "üñ•Ô∏è Creating desktop shortcuts..."

# Copy working shortcuts to desktop skeleton
cp /usr/share/applications/chatgpt.desktop /etc/skel/Desktop/ 2>/dev/null || true
cp /usr/share/applications/claude-ai.desktop /etc/skel/Desktop/ 2>/dev/null || true
cp /usr/share/applications/google-gemini.desktop /etc/skel/Desktop/ 2>/dev/null || true
cp /usr/share/applications/tgpt.desktop /etc/skel/Desktop/ 2>/dev/null || true

# Set permissions
chmod +x /usr/share/applications/*.desktop 2>/dev/null || true
chmod +x /etc/skel/Desktop/*.desktop 2>/dev/null || true

# ==========================================
# CREATE AI TOOLS TERMINAL MENU
# ==========================================

cat > /usr/local/bin/ai-tools-menu << 'EOF'
#!/bin/bash
# AI Tools Terminal Menu - All tools pre-installed!

echo "ü§ñ AI Tools Menu (Pre-installed)"
echo "================================="
echo ""
echo "Available tools:"
echo "1. Terminal GPT (tgpt) - Ready!"
echo "2. Gemini CLI - Ready!" 
echo "3. Ollama - Download models first"
echo "4. Web AI Tools"
echo "5. Exit"
echo ""

read -p "Choose option (1-5): " choice

case $choice in
    1)
        echo "üí¨ Starting Terminal GPT..."
        tgpt -i
        ;;
    2)
        echo "üîπ Gemini CLI Ready!"
        echo "Try: gemini chat \"What is machine learning?\""
        bash
        ;;
    3)
        echo "ü¶ô Ollama Setup:"
        if command -v ollama >/dev/null 2>&1; then
            echo "Ollama is installed but needs models."
            echo "Download a lightweight model: ollama pull llama3.2:1b"
            echo "Then use: ollama run llama3.2:1b"
            echo ""
            read -p "Download llama3.2:1b now? (y/n): " download
            if [ "$download" = "y" ]; then
                ollama serve &
                sleep 3
                ollama pull llama3.2:1b
                echo "‚úÖ Model downloaded! Use: ollama run llama3.2:1b"
            fi
        else
            echo "‚ùå Ollama not available"
        fi
        echo "Press Enter to continue..."
        read
        ;;
    4)
        echo "üåê Web AI Tools:"
        echo "‚Ä¢ ChatGPT, Claude AI, Gemini - Available in Applications menu"
        echo "‚Ä¢ Or click desktop shortcuts"
        echo "Press Enter to continue..."
        read
        ;;
    5)
        exit 0
        ;;
    *)
        echo "‚ùå Invalid choice"
        ;;
esac
EOF

chmod +x /usr/local/bin/ai-tools-menu

# Create AI Tools Menu desktop file
cat > /usr/share/applications/ai-tools-menu.desktop << 'EOF'
[Desktop Entry]
Version=1.0
Type=Application
Name=AI Tools Menu
Comment=Access all pre-installed AI tools
Exec=x-terminal-emulator -e ai-tools-menu
Icon=applications-science
Terminal=true
StartupNotify=true
Categories=System;AI-Tools;
Keywords=ai;tools;menu;terminal;
EOF

# ==========================================
# CREATE STATUS CHECKER
# ==========================================

cat > /usr/local/bin/ai-tools-status << 'EOF'
#!/bin/bash
# Check status of pre-installed AI tools

echo "ü§ñ AI Tools Status (Build-time Installation)"
echo "============================================="
echo ""

tools=("tgpt:Terminal GPT" "gemini:Gemini CLI" "ollama:Ollama" "firefox:Firefox Browser")
installed=0
total=${#tools[@]}

for tool_info in "${tools[@]}"; do
    IFS=':' read -r cmd name <<< "$tool_info"
    if command -v "$cmd" >/dev/null 2>&1; then
        echo "‚úÖ $name: Pre-installed and ready"
        ((installed++))
    else
        echo "‚ùå $name: Not available"
    fi
done

echo ""
echo "üìä Summary: $installed/$total core tools installed at build time"

# Check web shortcuts
echo ""
echo "üåê Web AI Tools:"
web_shortcuts=("chatgpt.desktop" "claude-ai.desktop" "google-gemini.desktop")
for shortcut in "${web_shortcuts[@]}"; do
    if [ -f "/usr/share/applications/$shortcut" ]; then
        echo "‚úÖ ${shortcut%.*}: Available in Applications menu"
    else
        echo "‚ùå ${shortcut%.*}: Missing"
    fi
done

echo ""
echo "üí° Usage:"
echo "  ‚Ä¢ Terminal tools: Run 'ai-tools-menu'"
echo "  ‚Ä¢ Web tools: Applications ‚Üí AI Tools"  
echo "  ‚Ä¢ Desktop: Click shortcuts"
EOF

chmod +x /usr/local/bin/ai-tools-status

# ==========================================
# CLEAN UP AND FINALIZE
# ==========================================

# Desktop database will be updated by final hook

# Clean up package cache
apt-get clean

echo ""
echo "‚úÖ AI Tools Build-time Installation Completed!"
echo ""
echo "üìã What's Pre-installed:"
echo "   ‚úÖ Terminal GPT (tgpt) - Ready to use"
echo "   ‚úÖ Gemini CLI - Ready to use"  
echo "   ‚úÖ Ollama - Models need to be downloaded"
echo "   ‚úÖ Fixed web shortcuts (ChatGPT, Claude, etc.)"
echo "   ‚úÖ Firefox-based web shortcuts"
echo ""
echo "üéØ Post-boot usage:"
echo "   ‚Ä¢ Run 'ai-tools-menu' for terminal tools"
echo "   ‚Ä¢ Applications ‚Üí AI Tools for web tools"
echo "   ‚Ä¢ Desktop shortcuts for quick access"
echo "   ‚Ä¢ Run 'ai-tools-status' to check status"
echo ""
echo "‚ö†Ô∏è Note: Heavy models (like Llama) are NOT pre-installed."
echo "   Users can install them later with: ollama pull llama3.2:1b"
